<%# app/views/profiles/edit.html.erb %>



<div class="container">

  <h1 class="page-header mt-2"><%= t("my_info") %>  </h1>

  <%= form_for @user.profile, url: update_profile_path, method: :patch do |f| %>
    <div class="form-group row">
      <%= f.label t('first_name'), class: "col-m-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :first_name, class: "form-control", style: "background-color: white;" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label t('last_name'), class: "col-m-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :last_name, class: "form-control", style: "background-color: white;" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label t('table_headers.address'), class: "col-m-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :address, class: "form-control", style: "background-color: white;" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label t('table_headers.phone_number'), class: "col-m-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :phone_number, class: "form-control", style: "background-color: white;" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label t('table_headers.sns_information'), class: "col-m-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :sns_information, class: "form-control", style: "background-color: white;" %>
      </div>
    </div>

    <!-- Other form fields for editing profile attributes -->

    <div class="form-group row">
      <div class="col-sm-10 offset-sm-2">
        <%= f.submit t('submit'), class: "btn btn-primary" %>
        <%= link_to t('return'), root_path, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>
