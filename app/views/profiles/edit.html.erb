<%# app/views/profiles/edit.html.erb %>

<h1>Edit Your Profile</h1>




<%= form_for @user.profile, url: update_profile_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>

    <div class="field">
    <%= f.label :sns_information %>
    <%= f.text_field :sns_information %>
  </div>

  <!-- Other form fields for editing profile attributes -->

  <div class="actions">
    <%= f.submit "Update Profile" %>
  </div>
<% end %>
